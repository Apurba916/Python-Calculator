print("This is a calculator to help you perform basic arithmetic operations.")

def calculator(user_input):
    def sum(num1, num2):
      return num1 + num2
    def difference(num1, num2):
        return num1 - num2
    def product(num1, num2):
        return num1 * num2
    def division(num1, num2):
        return num1 / num2
    num1 = int(input("Enter the first number: "))
    num2 = int(input("Enter the second number: "))
    if user_input == "add":
        print(f"The sum of {num1} and {num2} is {sum(num1, num2)}")
    elif user_input == "subtract":
        print(f"The difference of {num1} and {num2} is {difference(num1, num2)}")
    elif user_input == "multiply":
        print(f"The product of {num1} and {num2} is {product(num1, num2)}")
    elif user_input == "divide":
        print(f"The division of {num1} and {num2} is {division(num1, num2)}")
    else:
        print("Invalid input. Please enter a valid operation.")
calculator(user_input = input("Enter the operation you want to perform: Enter 'add' for addition\n 'subtract' for subtraction\n 'multiply' for multiplication\n 'divide' for division\n "))
